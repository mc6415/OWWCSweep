extends ./layout.pug

block content
  form
    .form-group
      label(for='name') Name
      input.form-control#name(name='name')
    .form-group
      label(for='country') Country
      select.form-control#country(name='country')
        for c in countries
          option(value=c._id,style='background:url('+c.flag+')') #{c.name}
    .form-group
      label(for='sr') SR
      input.form-control#sr(name='sr')
    .form-group
      label(for='team') Pro Team
      input.form-control#team(name='team')
    .form-group
      input.btn.btn-primary(type='submit')
